<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>generic-spark</groupId>
  <artifactId>common-metadata</artifactId>
  <packaging>pom</packaging>
  <version>2018.08.15</version>
  <modules>
    <module>article-categories</module>
    <module>article-templates</module>
    <module>article-templates-nested</module>
    <module>category-labels</module>
    <module>commons-page-links</module>
    <module>disambiguations</module>
    <module>external-links</module>
    <module>french-population</module>
    <module>geo-coordinates</module>
    <module>homepages</module>
    <module>infobox-properties</module>
    <module>infobox-property-definitions</module>
    <module>interlanguage-links</module>
    <module>labels</module>
    <module>out-degree</module>
    <module>page-ids</module>
    <module>page-length</module>
    <module>page-links</module>
    <module>persondata</module>
    <module>pnd</module>
    <module>redirects</module>
    <module>revision-ids</module>
    <module>revision-uris</module>
    <module>skos-categories</module>
    <module>topical-concepts</module>
    <module>wikipedia-links</module>
  </modules>
  <properties>
    <databus.dataInputDirectory>src/main/databus/${project.version}</databus.dataInputDirectory>
    <databus.bundle>generic-spark</databus.bundle>
    <databus.packageDirectory>/media/bigone/25TB/www/downloads.dbpedia.org/repo/lts/${databus.bundle}</databus.packageDirectory>
    <databus.downloadUrlPath>https://downloads.dbpedia.org/repo/lts/${databus.bundle}/${project.artifactId}/${project.version}/</databus.downloadUrlPath>
    <databus.publisher>https://webid.dbpedia.org/webid.ttl#this</databus.publisher>
    <databus.privateKeyFile>${user.home}/.m2/private_key_generic.der</databus.privateKeyFile>
    <databus.maintainer>https://termilion.github.io/webid.ttl#this</databus.maintainer>
    <databus.license>http://purl.org/NET/rdflicense/cc-by3.0</databus.license>
    <databus.issuedDate>2018-08-07</databus.issuedDate>
    <databus.modifiedDate>2018-08-10</databus.modifiedDate>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <databus.dataDependencyDirectory>NOT-IMPLEMENTED-YET</databus.dataDependencyDirectory>
  </properties>
  <pluginRepositories>
    <pluginRepository>
      <id>archiva.internal</id>
      <name>Internal Release Repository</name>
      <url>http://databus.dbpedia.org:8081/repository/internal</url>
    </pluginRepository>
    <pluginRepository>
      <id>archiva.snapshots</id>
      <name>Internal Snapshot Repository</name>
      <url>http://databus.dbpedia.org:8081/repository/snapshots</url>
    </pluginRepository>
  </pluginRepositories>
  <build>
    <plugins>
      <plugin>
        <groupId>org.dbpedia.databus</groupId>
        <artifactId>databus-maven-plugin</artifactId>
        <version>1.0-SNAPSHOT</version>
        <executions>
          <execution>
            <id>validate</id>
            <phase>validate</phase>
            <goals>
              <goal>validate</goal>
            </goals>
          </execution>
          <execution>
            <id>test-data</id>
            <phase>test</phase>
            <goals>
              <goal>test-data</goal>
            </goals>
          </execution>
          <execution>
            <id>metadata</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>metadata</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <pluginDirectory>${project.build.directory}/databus</pluginDirectory>
          <includeParseLogs>true</includeParseLogs>
          <dataInputDirectory>${databus.dataInputDirectory}</dataInputDirectory>
          <packageDirectory>${databus.packageDirectory}</packageDirectory>
          <bundle>${databus.bundle}</bundle>
          <downloadUrlPath>${databus.downloadUrlPath}</downloadUrlPath>
          <publisher>${databus.publisher}</publisher>
          <maintainer>${databus.maintainer}</maintainer>
          <license>${databus.license}</license>
          <privateKeyFile>${databus.privateKeyFile}</privateKeyFile>
          <issuedDate>${databus.issuedDate}</issuedDate>
          <modifiedDate>${databus.modifiedDate}</modifiedDate>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
